/* Components/notepad-content/notepad-content.wxss */
.list .init_item{
  display: flex;
  align-items: center;
  height: 4vh;
  margin-top: 2%;
  border-radius: 25rpx;
}
.list .delete_item{
  height: 170rpx;
  width: 100%;
  align-items: center;
  display: flex;
  border-radius: 25rpx;
}
.list .list-item_2 {
  margin-left: 36rpx;
  margin-right: 46rpx;
  padding: 40rpx 32rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0px 4rpx 8rpx #0000001a;
}
.list .init_item .text_and_date{
  display: inline;
  height: 8vh;
  width: 80%;
  /* border: 1rpx solid black; */
}
.list .delete_item .img_style{
  height: 100%;
  width: 11%;
  align-items: center;
  justify-content: center;
  text-align: center;
  display: flex;
}
.list .delete_item .list_content{
  display: flex;
  align-items: center;
  height: 70rpx;
  width: 80%;
  margin-left: 2%;
}

.space-x-14 > view:not(:first-child),
