@keyframes rotate {
  from {
    transform: rotate(0deg);  /* 开始时旋转角度为0 */
  }
  to {
    transform: rotate(360deg);  /* 结束时旋转角度为360度 */
  }
}
.slow-rotate {
  animation: rotate 30s infinite linear; /* 持续时间10秒，无限循环，线性过渡 */
}
