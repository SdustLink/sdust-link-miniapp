  border-radius: 10rpx;
  box-shadow: 0px 4rpx 8rpx #0000001a;
}
.init_page .other_part .list .init_item .text_and_date{
  display: inline;
  height: 8vh;
  width: 80%;
  /* border: 1rpx solid black; */
}
.init_page .other_part .list .delete_item .img_style{
  height: 100%;
  width: 11%;
  align-items: center;
  justify-content: center;
  text-align: center;
  display: flex;
}
.init_page .other_part .list .delete_item .list_content{
  display: flex;
  align-items: center;
  height: 70rpx;
  width: 80%;
  margin-left: 2%;
}
.init_page .bottom_notification{
  height: 180rpx;
  bottom: 0;
  background-color: #fafafa;
  position: fixed;
  left: 0%; 
  z-index: 1;
  display: flex;
  justify-content: center;
  right: 0%;
  width: auto;
}
