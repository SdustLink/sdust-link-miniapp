/* 初始页面的设置，不做解释，从codefun中copy，我自己的部分修改，直接写在wxml中了 */
.init_page{
  height: 100vh;
  width: 100vw;
  overflow-y: auto;
}
.init_page .head{
  display: flex;
  align-items: center;
  /* position: fixed; */
  width: 95vw;
  margin-left: 2.5vw;
  background-color: #fafafa;
  margin-top: 1.5vh;
  height: 7vh;
  justify-content: center;
  /* border: 1rpx solid red; */
}
.init_page .head .img1{
  align-items: center;
  display: flex;
  width: 60%;
}
.init_page .head .add_img{
