/* pages/Function/GradeFind/GradeFindContent/gradefindcontent.wxss */
/* 中间空白整体区域 */
.grade_page{
  margin-top: 4vh;
  height: 93vh;
  width: 90vw;
  margin-left: 5vw;
  background-color: #ffffff;
  border-radius: 28.3rpx;
  filter: drop-shadow(0px 2.36rpx 2.36rpx #00000040);
  position: relative;
  /* border: 1rpx solid red; */
}
/* “成绩查询”及图标 */
.grade_page .group {
  height: 8vh;
  width: 90%;
  margin-left: 5%;
  top: 2vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* border: 1rpx solid red; */
}
.grade_page .space-x-6 > view:not(:first-child),
.grade_page .space-x-6 > text:not(:first-child),
.grade_page .space-x-6 > image:not(:first-child) {
  margin-left: 1.5vw;
}
.grade_page .group .font5{
  position: absolute;
  right: 5%;
  color: #808080;
  font-size: 3.5vw;
  /* border: 1rpx solid red; */
}
.grade_page .group .image {
  width: 7vw;
  height: 3.8vh;
}
.grade_page .group .text {
  color: #000000;
  font-size: 4.5vw;
  font-family: SourceHanSansCN;
  line-height: 5vh;
}
/* 分割线 */
.grade_page .division{
  height: 1rpx;
  width: 90%;
  margin-left: 5%;
  margin-bottom: 2vh;
  background-color: #f4f4f4;
}

/* 学期及“生涯绩点查询”选择 */
.grade_page .section_2 {
  /* border: 1rpx solid red; */
  display: flex;
  width: 84vw;
  height: 12vh;
  margin-left: 3vw;
  background-color: #ffffff;
  /* border-radius: 17.69rpx;
  box-shadow: 0px 2.36rpx 4.72rpx #0000001a; */
  position: relative;
}
.grade_page .section_2 .part1{
  height: 100%;
  width: 40%;
  margin-right: 2vw;
  margin-left: 1.6vw;
  /* border:1rpx solid red; */
}
.grade_page .section_2 .part1 .font1{
  width: 100%;
  height: 30%;
  font-size: 4.7vw;
  font-weight: 520;
  color: #458d18;
  margin-top: 10%;
  /* border: 1rpx solid red; */
}
.grade_page .section_2 .part1 .font2{
  width: 100%;
  height: 30%;
  font-weight: 345;
  color: #458d18;
  font-size: 2.6vw;
  margin-top: 8%;
  /* border: 1rpx solid red; */
}
.grade_page .section_2 .part2{
  height: 100%;
  width: 26%;
  margin-right: 3.5vw;
  /* border:1rpx solid red; */
}
.grade_page .section_2 .part2 .expression{
  width: 84%;
  height: 66%;
  margin-top: 17%;
  margin-left: 8%;
  border: 1rpx solid #e5e5e5;
  border-radius: 3vw;
  position: relative;
}
.grade_page .section_2 .part2 .expression .image1{
  /* border: 1rpx solid red; */
  font-size: 3.6vw;
  margin-top: 20%;
}
.grade_page .section_2 .part2 .expression .font3{
  position: absolute;
  width: 100%;
  height: 18%;
  font-size: 2.8vw;
  font-weight: 320;
  bottom: 8%;
  color: #646262;
  /* border: 1rpx solid black; */

}

.grade_page .section_2 .part3{
  height: 100%;
  width: 32%;
  margin-left: 1.5vw;
  /* border:1rpx solid red; */
}
.grade_page .section_2 .part3 .font_desc{
  height: 30%;
  width: 96%;
  display: flex;
  margin-left: 4%;
  align-items: center;
  font-size: 3.5vw;
  /* border: 1rpx solid yellow; */
}

.justify_style{
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 课程成绩 */
.grade_page .scroll_part{
  width: 90%;
  margin-left: 5%;
  margin-top: 1vh;
  height: 68vh;
  /* border: 1rpx solid red; */
}
.grade_page .scroll_part .class_list{
  height: 10vh;
  width: 80vw;
  /* border: 1rpx solid black; */
  margin-top: 1vh;
}
.grade_page .scroll_part .class_list .class_content{
  width: 100%;
  height: 95%;
  /* border: 1rpx solid red; */
  display: flex;
  justify-content: space-between;
}
.grade_page .scroll_part .class_list .class_content .part1{
  width: 65%;
  height: 100%;
}
.grade_page .scroll_part .class_list .class_content .part1 .font1{
  font-size: 4.2vw;
  font-weight: 500;
  /* font-family: 'Times New Roman', Times, serif; */
}
.grade_page .scroll_part .class_list .class_content .part1 .font2{
  font-size: 3.8vw;
  font-weight: 300;
}
.grade_page .scroll_part .class_list .class_content .part2{
  width: 17%;
  height: 100%;
  display: inline;
  align-items: center;
  justify-content: center;
}
.grade_page .scroll_part .class_list .class_content .part2 .font3{
  justify-content: center;
  font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 5vw;
}
.grade_page .scroll_part .class_list .class_content .part2 .font4{
  font-size: 3.8vw;
  justify-content: center;
  color: #4f9c20;
}
.class_desc{
  width: 100%;
  height: 50%;
  display: flex;
  align-items: center;
}
.grade_page .null_class{
  width: 40%;
  height: 10vh;
  font-size: large;
  /* border: 1rpx solid red; */
  margin-top: 20vh;
  margin-left: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 300;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  }