/* 全局样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F0F0F0;
  height: 100%;
  padding: 10px;
}

/* 标题栏样式 */
.header {
  width: 100%;
  padding: 20px 0;
  background-color: #0078D4;
  display: flex;
  justify-content: center;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #FFFFFF;
}

/* 搜索区域样式 */
.search-section {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}

.search-input {
  flex: 1;
  height: 40px;
  border: 1px solid #C4C4C4;
  border-radius: 4px;
  padding-left: 10px;
  font-size: 16px;
}

.search-button {
  width: 80px;
  height: 40px;
  background-color: #0078D4;
  color: #FFFFFF;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  margin-left: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 考试列表样式 */
.exam-list {
  width: 100%;
  margin-top: 20px;
}

.exam-item {
  background-color: #FFFFFF;
  border: 1px solid #C4C4C4;
  border-radius: 4px;
  padding: 15px;
  margin-bottom: 10px;
}

.exam-info {
  display: flex;
  flex-direction: column;
}

.exam-time,
.exam-location,
.exam-subject {
  font-size: 16px;
  margin-bottom: 5px;
}
