/* pages/message/message.wxss */
page {
  width: 100%;
}



#_head {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 0px;
  width: 100%;
  height: 160rpx;
  left: 70rpx;
  top: 80rpx;
}

#_headtest {
  width: 100%;
  height: 60rpx;
  font-family: 'Abyssinica SIL';
  font-style: normal;
  font-weight: 400;
  font-size: 36px;
  display: flex;
  align-items: center;
  color: #000000;
  opacity: 0.8;
}

#_headtestlast {
  width: 100%;
  height: 70rpx;
  font-family: 'Abyssinica SIL';
  font-style: normal;
  font-weight: 300rpx;
  font-size: 20px;
  display: flex;
  align-items: center;
  color: #000000;
  opacity: 0.8;

}



._contentflex {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 0px;
  gap: 30px;
  flex: none;
  order: 0;
  flex-grow: 0;
}
._tip {
  width: 100%;
  height: 60rpx;
  border-bottom: 1rpx solid #d8d0d0;
}
._text{
  position: absolute;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
 
  color: #FFFFFF;
  top:78%;
  font-size: 41rpx;
  font-weight: bold;
}
._image {}

.style_one {
  
  width: 45%;
  height: 350rpx;
  background: #FFA31A;
  box-shadow: 0px 10px 20px rgba(255, 163, 25, 0.2);
  border-radius: 15px;
  /* Inside auto layout */
  flex: none;
  order: 0;
  flex-grow: 0;
}
._text2{
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  color: #FFFFFF;
  font-size: 14px;
  font-weight: 400;
  line-height: 21px;
  flex: 1;
  color: #2A2D32;
  opacity: 0.6;
}