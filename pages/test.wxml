<view class="container">
  <view class="header">
    <text class="title">考试查询</text>
  </view>

  <view class="search-section">
    <input class="search-input" placeholder="请输入关键字搜索考试" bindinput="onSearchInput" />
    <button class="search-button" bindtap="onSearch">搜索</button>
  </view>

  <view class="exam-list">
    <view class="exam-item" wx:for="{{exams}}" wx:key="id">
      <view class="exam-info">
        <text class="exam-time">考试时间：{{item.time}}</text>
        <text class="exam-location">考试地点：{{item.location}}</text>
        <text class="exam-subject">考试科目：{{item.subject}}</text>
      </view>
    </view>
  </view>
</view>
