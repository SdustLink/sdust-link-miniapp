<view class="flex-col section_7 space-y-13 " style="position: absolute;top: 59vh;width: 90%;left: 5%;border-radius: 17px;border: 1px solid #E6E8EE;padding: 5vw 5vw 5vw;box-shadow: 0px 10px 20px rgba(76, 93, 105, 0.1);" >
    <view style="display: flex;">
      <image
        class="self-start image_7" mode="widthFix"
        src="https://codefun-proj-user-res-1256085488.cos.ap-guangzhou.myqcloud.com/649017e85a7e3f03102b078f/64928c43726ab50011f2e8ed/16873262936444418584.png" 
      />
      <view style="width: 70%;display: flex;align-items: center;font-family: 'ABeeZee';font-style: normal;font-weight: 400;font-size: 18px;line-height: 28px;margin-left: 2%;">今日待办</view>
    </view>
    <view class="divider"></view>
    <view class="flex-row items-center section_8 space-x-18" wx:if="{{event_num==0}}"bindtap="navigator_to_notpad">
      <view class="text" >点我一下可以新建待办哦~</view>
    </view>
    <!-- 当不为空 -->
    <!-- 不超时的部分 -->
    <view wx:for="{{selected_time_event_datalist}}" wx:key="index" wx:if="{{event_num!=0&&(item[0][0]==nowtime[0]&&item[0][1]==nowtime[1]&&item[0][2]==nowtime[2])}}" >
      <view class="flex-row items-center list-item_2 space-x-14" style="display: flex;align-items: center;height: 10vh;margin-top: 2%;border-radius: 5rpx;">
        <!-- 选择框 -->
        <image
          class="image_10"
          src="https://codefun-proj-user-res-1256085488.cos.ap-guangzhou.myqcloud.com/649017e85a7e3f03102b078f/64928c43726ab50011f2e8ed/16873262928538070577.png" bindtap="transfer_to_finished" data-id="1" data-num="{{index}}"
        />
        <!-- 文字加日期 -->
        <view class="flex-col items-start flex-auto space-y-8" style="display: inline;height: 50rpx;width: 80%;" bindtap="navigator_to_notpad">
          <!-- 标题 -->
          <view class="font_2 text_2" style="height: 40%;width: 100%;">{{(item[1].length<10)?item[1]:(item[1][0]+item[1][1]+item[1][2]+item[1][3]+item[1][4]+item[1][5]+item[1][6]+item[1][7]+item[1][8]+item[1][9]+"...")}}</view>
          <!-- 日期 -->
          <view class="font_3" style="height: 20%;width: 100%;margin-top: 5%;">截止至 {{item[0][3]}}:{{(item[0][4]>9)?item[0][4]:('0'+item[0][4])}}</view>
        </view>
      </view>
    </view>
  <!-- 超时的部分 -->
  <view wx:for="{{overtime_event_datalist}}" wx:key="index" wx:if="{{event_num!=0&&(item[0][0]==nowtime[0]&&item[0][1]==nowtime[1]&&item[0][2]==nowtime[2])}}" >
      <view class="flex-row items-center list-item_2 space-x-14" style="display: flex;align-items: center;height: 70rpx;margin-top: 2%;background-color: rgba(255, 0, 0, 0.144);  border-radius: 15px;border: darkgray;">
        <!-- 选择框 -->
        <image
          class="image_10"
          src="https://codefun-proj-user-res-1256085488.cos.ap-guangzhou.myqcloud.com/649017e85a7e3f03102b078f/64928c43726ab50011f2e8ed/16873262928538070577.png" bindtap="transfer_to_finished" data-id="2" data-num="{{index}}"
        />
        <!-- 文字加日期 -->
        <view class="flex-col items-start flex-auto space-y-8" style="display: inline;height: 80rpx;width: 80%;" bindtap="navigator_to_notpad">
          <!-- 标题 -->
          <view class="font_2 text_2" style="height: 40%;width: 100%;">{{(item[1].length<10)?item[1]:(item[1][0]+item[1][1]+item[1][2]+item[1][3]+item[1][4]+item[1][5]+item[1][6]+item[1][7]+item[1][8]+item[1][9]+"...")}}</view>
          <!-- 日期 -->
          <view class="font_3" style="height: 40%;width: 100%;margin-top: 7%;">于{{item[0][3]}}:{{(item[0][4]>9)?item[0][4]:('0'+item[0][4])}}已超时</view>
        </view>
      </view>
    </view>


  

  </view>
  





